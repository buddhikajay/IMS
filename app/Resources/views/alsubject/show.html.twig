{% extends 'base.html.twig' %}

{% block body %}
    <h1>ALSubject</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aLSubject.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ aLSubject.code }}</td>
            </tr>
            <tr>
