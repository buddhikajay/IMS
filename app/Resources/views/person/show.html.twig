{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Nic</th>
                <td>{{ person.nic }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ person.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ person.school }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ person.district }}</td>
            </tr>
            <tr>
                <th>Olenglish</th>
                <td>{{ person.olEnglish }}</td>
            </tr>
            <tr>
                <th>Olmaths</th>
                <td>{{ person.olMaths }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ person.language }}</td>
            </tr>
            <tr>
                <th>Algrades</th>
                <td>{{ person.alGrades }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{% if person.dob %}{{ person.dob|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Availabletime</th>
                <td>{% if person.availableTime %}{{ person.availableTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Eduqualification</th>
                <td>{{ person.eduQualification }}</td>
            </tr>
            <tr>
                <th>Workexperience</th>
                <td>{{ person.workExperience }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('person_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('person_edit', { 'id': person.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
