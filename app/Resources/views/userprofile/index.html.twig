{% extends 'base.html.twig' %}

{% block body %}
    <h1>UserProfile list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Contact</th>
                <th>Profilepic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for userProfile in userProfiles %}
            <tr>
                <td><a href="{{ path('userprofile_show', { 'id': userProfile.id }) }}">{{ userProfile.id }}</a></td>
                <td>{{ userProfile.firstName }}</td>
                <td>{{ userProfile.lastName }}</td>
                <td>{{ userProfile.contact }}</td>
                <td>{{ userProfile.profilePic }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('userprofile_show', { 'id': userProfile.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('userprofile_edit', { 'id': userProfile.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('userprofile_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
