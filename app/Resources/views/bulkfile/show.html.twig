{% extends 'base.html.twig' %}

{% block body %}
    <h1>BulkFile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bulkFile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bulkFile.name }}</td>
            </tr>
            <tr>
                <th>Filepath</th>
                <td>{{ bulkFile.filePath }}</td>
            </tr>
            <tr>
                <th>Columnmapping</th>
                <td>{{ bulkFile.columnMapping }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{% if bulkFile.timestamp %}{{ bulkFile.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{% if bulkFile.complete %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Headers</th>
                <td>{% if bulkFile.headers %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bulkfile_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bulkfile_edit', { 'id': bulkFile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
