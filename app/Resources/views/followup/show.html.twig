{% extends 'base.html.twig' %}

{% block body %}
    <h1>Followup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ followup.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{% if followup.timestamp %}{{ followup.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ followup.action }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ followup.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('followup_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('followup_edit', { 'id': followup.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
