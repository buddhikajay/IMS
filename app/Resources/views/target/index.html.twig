{% extends 'base.html.twig' %}

{% block body %}
    <h1>Target list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Timestamp</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for target in targets %}
            <tr>
                <td><a href="{{ path('target_show', { 'id': target.id }) }}">{{ target.id }}</a></td>
                <td>{% if target.timestamp %}{{ target.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if target.startDate %}{{ target.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if target.endDate %}{{ target.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ target.amount }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('target_show', { 'id': target.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('target_edit', { 'id': target.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('target_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
