{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inquiry list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Semester</th>
                <th>Probability</th>
                <th>Lastmodified</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inquiry in inquiries %}
            <tr>
                <td><a href="{{ path('inquiry_show', { 'id': inquiry.id }) }}">{{ inquiry.id }}</a></td>
                <td>{{ inquiry.year }}</td>
                <td>{{ inquiry.semester }}</td>
                <td>{{ inquiry.probability }}</td>
                <td>{% if inquiry.lastModified %}{{ inquiry.lastModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if inquiry.created %}{{ inquiry.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('inquiry_show', { 'id': inquiry.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('inquiry_edit', { 'id': inquiry.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('inquiry_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
